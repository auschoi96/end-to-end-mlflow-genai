# DC Assistant Local Development Environment
# Copy this file to .env.local and fill in your values

# Databricks workspace configuration
DATABRICKS_HOST=https://YOUR_WORKSPACE.cloud.databricks.com
DATABRICKS_CONFIG_PROFILE=YOUR_PROFILE  # Optional, for CLI auth

# MLflow configuration
MLFLOW_TRACKING_URI=databricks
MLFLOW_EXPERIMENT_ID=YOUR_EXPERIMENT_ID

# DC Assistant mode: 'local' or 'endpoint'
# - 'local': Uses the agent code directly (requires UC tools access)
# - 'endpoint': Uses a deployed serving endpoint
DC_ASSISTANT_MODE=local

# LLM endpoint for local agent mode
LLM_MODEL=databricks-meta-llama-3-3-70b-instruct

# Unity Catalog configuration
UC_CATALOG=ac_demo
UC_SCHEMA=dc_assistant

# Prompt registry configuration
PROMPT_NAME=ac_demo.dc_assistant.dc_assistant_prompt

# Optional: OAuth authentication for prompt registry
# DATABRICKS_CLIENT_ID=your-oauth-client-id
# DATABRICKS_CLIENT_SECRET=your-oauth-client-secret
